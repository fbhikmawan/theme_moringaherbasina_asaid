<?xml version="1.0" encoding="UTF-8" ?>
<odoo>
    <!-- Template customized for header -->
    <template id="moringa_header" inherit_id="website.layout" name="Moringa Header" active="False">
        <xpath expr="//header" position="replace">
            <header>
                <section class="top_nav">
                    <div class="wrapper">
                        <div class="container ">
                            <div class="row">
                                <div class="col-lg-8 col-md-8 col-sm-8 col-12 ">
                                    <p class="free">
                                        Free shipping, 30-day return or refund
                                        guarantee.
                                    </p>
                                </div>
                                <div class="col-lg-4 col-md-4 col-sm-4 col-12">
                                    <div class="left">
                                        <div class="sign_in">
                                            <!-- Sign In -->
                                            <t t-call="portal.placeholder_user_sign_in">
                                                <t t-set="_item_class" t-value="'nav-item ml-lg-auto'"/>
                                                <t t-set="_link_class" t-value="'nav-link'"/>
                                            </t>
                                            <!-- User Dropdown -->
                                            <t t-call="portal.user_dropdown">
                                                <t t-set="_user_name" t-value="True"/>
                                                <t t-set="_item_class" t-value="'nav-item dropdown ml-lg-auto'"/>
                                                <t t-set="_link_class" t-value="'nav-link'"/>
                                            </t>
                                        </div>
                                        <div class="sign_in">
                                            <a href="#">FAQS</a>
                                        </div>
                                        <div class="currency">
                                            <t t-call="website_sale.pricelist_list">
                                                <t t-set="_classes" t-valuef="ml-2"/>
                                            </t>
                                        </div>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                </section>
            </header>
            <!-- navbar  -->
            <section class="navigation ">
                <div class="container ms">
                    <nav class="navbar navbar-expand-lg navbar-light bg-light">
                        <a class="navbar-brand" href="/">
                            <!--Brand-->
                            <t t-call="website.placeholder_header_brand"/>
                        </a>
                        <button class="navbar-toggler" type="button" data-toggle="collapse" data-target="#navbarText" aria-controls="navbarText" aria-expanded="false" aria-label="Toggle navigation">
                            <img src="/theme_moringaherbasina_asaid/static/src/images/icons/menu.png" alt=""/>
                        </button>
                        <div class="collapse navbar-collapse" id="navbarText">
                            <!-- Menu -->
                            <ul class="navbar-nav m-auto" id="myDIV">
                                <t t-foreach="website.menu_id.child_id" t-as="submenu">
                                    <t t-call="website.submenu">
                                        <t t-set="item_class" t-value="'nav-item'"/>
                                        <t t-set="link_class" t-value="'nav-link'"/>
                                    </t>
                                </t>
                            </ul>
                            <div class="navbar-text ">
                                <!-- WishList -->
                                <t t-set="_icon" t-value="True"/>
                                <t t-set="_link_class" t-value="'o_navlink_background btn position-relative rounded-circle p-1 text-center text-reset'"/>
                                <t t-set="_badge_class" t-value="'position-absolute top-0 end-0 mt-n1 me-n1 rounded-pill'"/>
                                <t t-nocache="The wishlist may vary and depends on the user." t-nocache-_icon="_icon" t-nocache-_item_class="_item_class" t-nocache-_link_class="_link_class" t-nocache-_badge_class="_badge_class" t-nocache-_icon_wrap_class="_icon_wrap_class" t-nocache-_text_class="_text_class" t-nocache-_text="_text">
                                    <t t-set="wishcount" t-value="len(request.env['product.wishlist'].current())"/>
                                    <t t-set="show_wishes" t-value="True"/>
                                    <t t-set="show_wishes" t-value="show_wishes and wishcount > 0"/>
                                    <li t-attf-class="o_wsale_my_wish o_wsale_my_wish_hide_empty #{not show_wishes and 'd-none'} nav-item">
                                        <a href="/shop/wishlist" t-attf-class="nav-link">
                                            <div t-attf-class="#{_icon_wrap_cla">
                                                <i class="fa fa-heart"/>
                                                <sup t-esc="wishcount" t-attf-class="my_wish_quantity o_animate_blink badge badge-primary"/>
                                            </div>
                                            <span t-if="_text" t-attf-class="#{_text_class}">
                                                Wishlist
                                            </span>
                                        </a>
                                    </li>
                                </t>
                                <!-- Search -->
                                <li class="nav-item">
                                    <div class="modal fade" id="o_search_modal" aria-hidden="true" tabindex="-1">
                                        <div class="modal-dialog modal-lg pt-5">
                                            <div class="modal-content mt-5">
                                                <t t-call="website.header_search_box_input">
                                                    <t t-set="_classes" t-valuef="input-group-lg"/>
                                                </t>
                                            </div>
                                        </div>
                                    </div>
                                    <a t-attf-class="btn #{_button_classes} o_not_editable nav-link" data-bs-target="#o_search_modal" data-bs-toggle="modal" role="button" title="Search">
                                        <i class="oi oi-search"/>
                                    </a>
                                </li>
                                <!-- Cart -->
                                <t t-set="website_sale_order" t-value="website.sale_get_order()"/>
                                <t t-set="show_cart" t-value="true"/>
                                <li t-attf-class="nav-item} divider d-none"/>
                                <!-- Make sure the cart and related menus are not folded (see autohideMenu) -->
                                <li t-attf-class="o_wsale_my_cart #{not show_cart and 'd-none'} nav-item">
                                    <a href="/shop/cart" t-attf-class="nav-link">
                                        <i class="material-icons">
                                            shopping_cart
                                        </i>
                                        <span t-if="_text">My Cart</span>
                                        <sup class="my_cart_quantity badge badge-primary" t-esc="website_sale_order and website_sale_order.cart_quantity or '0'" t-att-data-order-id="website_sale_order and website_sale_order.id or ''"/>
                                    </a>
                                </li>
                            </div>
                        </div>
                    </nav>
                </div>
            </section>
        </xpath>
    </template>
</odoo>
